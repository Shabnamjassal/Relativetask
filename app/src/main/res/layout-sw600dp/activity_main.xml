<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivCenterTop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/flights1"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCenterTop"
        android:layout_centerHorizontal="true"
        android:text="Flights"
        android:textAlignment="center"
        android:textColor="#070707"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"/>/>

    <ImageView
        android:id="@+id/ivSpaceStation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/spacestation"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivSpaceStation"
        android:text="SpaceStation"
        android:textColor="#070707"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"/>
    <ImageView
        android:id="@+id/ivrovers"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rovers"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivrovers"
        android:text="Rovers"
        android:textColor="#070707"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tvCenterLeft"
        android:layout_toLeftOf="@+id/ivCenterTop"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="#13DDCA"
        android:text="DCA"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@id/ivSpaceStation"
        android:layout_marginLeft="-25dp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tvCenterRight"
        android:layout_toRightOf="@id/ivCenterTop"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="#13DDCA"
        android:text="MARS"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_below="@id/ivrovers"
        android:layout_marginRight="-25dp"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/tvCenter"
        android:layout_below="@id/ivSpaceStation"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Way"
        android:textColor="@color/white"
        android:paddingEnd="40dp"
        android:background="#FD9803"
        android:layout_marginTop="25dp"
        android:id="@+id/llOneWay"
        android:layout_below="@+id/tvCenterLeft"
        android:layout_marginLeft="5dp"
        android:gravity="center"/>
    <Switch
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/tvCenterRight"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTravel"
        android:text="1 Traveller"
        android:textColor="@color/white"
        android:background="#FD9803"
        android:layout_below="@id/llOneWay"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"

        />


</RelativeLayout>